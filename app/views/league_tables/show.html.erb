<h1>LeagueTables</h1>

<table class="table table-striped table-bordered table-hover">
<thead>
   <tr>
    <th>Pos</th>
    <th>Team</th>
    <th>P</th>
    <th>W</th>
    <th>D</th>
    <th>L</th>
    <th>F</th>
    <th>A</th>
    <th>GD</th>
    <th>Pts</th>
  </tr>
</thead>
<tbody>
  <% @league_tables.each do |league_table| %>
  <tr>
    <td><%= league_table.position %></td>
    <td><%= league_table.team_name %></td>
    <td><%= league_table.play %></td>
    <td><%= league_table.win %></td>
    <td><%= league_table.draw %></td>
    <td><%= league_table.lose %></td>
    <td><%= league_table.get_score %></td>
    <td><%= league_table.concerned_score %></td>
    <td><%= league_table.goal_diff %></td>
    <td><%= league_table.point %></td>
  </tr>
  <% end %>
</tbody>
</table>

